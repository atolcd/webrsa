<?xml version="1.0"?>
<ruleset name="WebRsa">
    <description>Standard de codage pour web-rsa 3.2.0</description>

    <!-- Compatibilité PHP 5.3 => 7.0 -->
    <rule ref="PHPCompatibility">
        <properties>
            <property name="testVersion" type="string" value="5.3-7.0" />
        </properties>
    </rule>

    <!-- Détection du code commenté -->
    <rule ref="/home/cbuffin/www/gitlab/phpcs-standards/Standards/DeadCode/ruleset.xml"/>
    <rule ref="DeadCode.Commenting.CommentedCode">
        <properties>
            <property name="docblocks" type="bool" value="false" />
            <property name="tolerance" type="int" value="15" />
        </properties>
    </rule>

    <!-- Vérification des appels à App::uses -->
    <rule ref="/home/cbuffin/www/github/jmjjg/phpcs-standards-0.7.0/Standards/Cake2/ruleset.xml"/>
    <rule ref="Cake2.Classes.AppUses">
        <properties>
            <property name="extraAvailable" type="array" value=""/>
            <property name="extraTypes" type="array" value="Console/Command/Abstract,Model/Abstractclass,Model/Interface,Utility/Interfaces,Validation"/>
        </properties>
    </rule>
</ruleset>